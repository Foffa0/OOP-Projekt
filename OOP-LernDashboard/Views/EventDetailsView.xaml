<UserControl x:Class="OOP_LernDashboard.Views.EventDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_LernDashboard.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource WindowTheme}">
    <StackPanel>
        <TextBox Text="{Binding EventTitleTemp, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PrimaryTextInput}" Margin="0, 20, 0, 0"></TextBox>
        <TextBox Text="{Binding EventDescriptionTemp, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PrimaryTextInput}" Margin="0, 20, 0, 0"></TextBox>
        <TextBlock Text="{Binding Id}" Style="{StaticResource Text}"></TextBlock>
        <Button VerticalAlignment="Center" HorizontalAlignment="Left" Command="{Binding SaveCommand}" Style="{DynamicResource PrimaryButton}">Speichern</Button>
    </StackPanel>
</UserControl>
