<Window x:Class="OOP_LernDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_LernDashboard" xmlns:views="clr-namespace:OOP_LernDashboard.Views"
        xmlns:vms="clr-namespace:OOP_LernDashboard.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200"
        Background="{StaticResource WindowTheme}">
    <Window.Resources>
        <ResourceDictionary>
            <!--Add Viewmodel <-> Model binding here-->
            <DataTemplate DataType="{x:Type vms:DemoViewModel}">
                <views:DemoView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--Side Nav-->
        <Grid Grid.Column="0" Background="{StaticResource SecondaryColor}">
            
        </Grid>

        <!--Main Content, variable-->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="10" />
    </Grid>
</Window>
