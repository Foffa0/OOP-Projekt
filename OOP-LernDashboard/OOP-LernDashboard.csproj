<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>OOP_LernDashboard</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>logo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\CalendarIcon.png" />
    <None Remove="Images\DashboardIcon.png" />
    <None Remove="Images\GoogleLogo.png" />
    <None Remove="Images\leftArrow.png" />
    <None Remove="Images\QuickNotesIcon.png" />
    <None Remove="Images\rightArrow.png" />
    <None Remove="Images\SettingsIcon.png" />
    <None Remove="Images\TimerIcon.png" />
    <None Remove="Images\ToDoIcon.png" />
    <None Remove="logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\leftArrow.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Apis.Calendar.v3" Version="1.68.0.3402" />
    <PackageReference Include="HandyControls" Version="3.5.2" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.18" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.18" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="7.0.18">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\CalendarIcon.png" />
    <Resource Include="Images\DashboardIcon.png" />
    <Resource Include="Images\GoogleLogo.png" />
    <Resource Include="Images\QuickNotesIcon.png" />
    <Resource Include="Images\rightArrow.png" />
    <Resource Include="Images\SettingsIcon.png" />
    <Resource Include="Images\TimerIcon.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\ToDoIcon.png" />
    <Resource Include="logo.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
